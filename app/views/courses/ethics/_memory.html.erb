<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js"></script>

<% i = 0 %>
<div class="row">
  <% @memory.each do |card| %>
      <% i = i + 1 %>
      <div class="col-xs-12 col-sm-6 col-md-4 buffer cardsize">
        <div id="<%=i%>" value="<%=card[1]%>" class="flip cardsize">

          <div class="front yellowish cardsize">

          </div>

          <div class="back yellowish cardsize">
            <%= card[1] %>
          </div>

        </div>
      </div>
  <% end %>

</div>


<script>
    $(document).ready(function() {
        var flippedcard1 = 0;
        var flippedcard2 = 0;

        $('.flip').on('click', function (){
            var currentcard = $(this).attr("id");

            console.log(flippedcard1 + " | " + flippedcard2);

            if((flippedcard1 > 0) && (flippedcard2 > 0)){
                $('#' + flippedcard1).flip(false);
                $('#' + flippedcard2).flip(false);
                flippedcard1 = 0;
                flippedcard2 = 0;

            }  else if($('#' + currentcard).children().hasClass('greenish')){
                console.log("nothing should happen");
            } else if((flippedcard1 > 0) && (flippedcard1 !== currentcard)) {
                $('#' + currentcard).flip('toggle');
                if ($('#' + currentcard).attr("value") === $('#' + flippedcard1).attr("value")) {

                    $('#' + currentcard).removeClass('flip');
                    $('#' + flippedcard1).removeClass('flip');

                    $('#' + currentcard).children().removeClass('yellowish').addClass('greenish');
                    $('#' + flippedcard1).children().removeClass('yellowish').addClass('greenish');

                    flippedcard1 = 0;

                } else {
                    flippedcard2 = currentcard;
                }
            } else if(flippedcard1 === currentcard){
                $('#' + currentcard).flip('toggle');
                flippedcard1 = 0;
            } else {
                $('#' + currentcard).flip('toggle');
              flippedcard1 = $(this).attr("id");
            }
        });


        $(".flip").flip({
            trigger: 'manual'
        });

    });
</script>