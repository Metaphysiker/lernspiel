<script>
    $(document).ready(function () {
        var score = 0;
        var currentnumber = 1;
        $('#' + currentnumber).removeClass("hidden");

        $('.btn-block').on('click', function (){
            score = parseInt($(this).attr("value")) + score;
            $('#' + currentnumber).fadeOut("slow", function(){
